{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["dev-proxy.js"],
      "ignore": [
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/.next/**",
        "**/.turbo/**",
        "**/.nx/**",
        "**/node_modules/**"
      ]
    },
    "apps/app": {
      "entry": [
        "app/entry.client.tsx",
        "app/entry.server.tsx",
        "app/root.tsx",
        "app/routes/**/*.{ts,tsx}",
        "vite.config.ts"
      ],
      "project": ["app/**/*.{ts,tsx}", "tests/**/*.{ts,tsx}"]
    },
    "apps/web": {
      "entry": ["src/**/*.astro", "astro.config.mjs"],
      "project": ["src/**/*.{ts,tsx,astro}"]
    },
    "apps/admin": {
      "entry": [
        "app/entry.client.tsx",
        "app/entry.server.tsx",
        "app/root.tsx",
        "app/routes/**/*.{ts,tsx}",
        "vite.config.ts"
      ],
      "project": ["app/**/*.{ts,tsx}"]
    },
    "apps/cms": {
      "entry": ["src/**/*.astro", "astro.config.mjs"],
      "project": ["src/**/*.{ts,tsx,astro}"]
    },
    "apps/mobile": {
      "entry": ["App.tsx", "index.js", "app.json"],
      "project": ["**/*.{ts,tsx}", "!**/*.test.{ts,tsx}"]
    },
    "apps/background-jobs": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/notifications": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/email": {
      "entry": ["emails/**/*.tsx"],
      "project": ["emails/**/*.tsx"]
    },
    "apps/studio": {
      "entry": ["index.ts"],
      "project": ["*.ts"]
    },
    "apps/docs": {
      "entry": ["mint.json"],
      "project": ["**/*.{md,mdx}"],
      "ignore": ["**"]
    },
    "apps/chrome-extension": {
      "entry": ["src/**/*.{ts,tsx}", "manifest.json"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/*": {
      "entry": [
        "index.ts",
        "src/index.ts",
        "src/**/*.ts",
        "**/*.config.{js,ts}"
      ],
      "project": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}"]
    }
  },
  "ignore": [
    "**/*.config.{js,ts}",
    "**/*.setup.{js,ts}",
    "**/vitest.config.ts",
    "**/playwright.config.ts",
    "**/tailwind.config.ts",
    "**/postcss.config.js",
    "**/.storybook/**",
    "**/generate-icons.js"
  ],
  "ignoreDependencies": [
    "@epic-web/config",
    "@types/*",
    "prettier",
    "prettier-plugin-*",
    "eslint",
    "eslint-*",
    "@typescript-eslint/*",
    "typescript",
    "vitest",
    "playwright",
    "@playwright/*",
    "husky",
    "lint-staged",
    "npm-run-all",
    "nx",
    "oxlint",
    "storybook",
    "@storybook/*"
  ],
  "ignoreExportsUsedInFile": true
}
