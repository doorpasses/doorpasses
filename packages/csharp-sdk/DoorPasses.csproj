<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <PackageId>DoorPasses</PackageId>
    <Version>1.0.0</Version>
    <Authors>DoorPasses Team</Authors>
    <Company>DoorPasses</Company>
    <Description>Official C# SDK for DoorPasses - Digital Access Control Platform</Description>
    <PackageProjectUrl>https://github.com/mohammedzamakhan/doorpasses</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mohammedzamakhan/doorpasses</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>doorpasses;access-control;nfc;digital-wallet;apple-wallet;google-wallet;mena;sdk;api-client</PackageTags>
    <DefaultItemExcludes>$(DefaultItemExcludes);tests/**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

</Project>
