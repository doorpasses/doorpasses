{
    "name": "doorpasses/doorpasses-php",
    "description": "Official PHP SDK for DoorPasses - Digital Access Control Platform",
    "keywords": [
        "doorpasses",
        "access-control",
        "nfc",
        "digital-wallet",
        "apple-wallet",
        "google-wallet",
        "mena",
        "sdk",
        "api-client"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DoorPasses Team",
            "email": "support@doorpasses.io"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-coveralls/php-coveralls": "^2.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DoorPasses\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoorPasses\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=5"
    }
}
