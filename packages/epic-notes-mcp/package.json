{
  "name": "epic-notes-mcp",
  "version": "2.0.0",
  "type": "module",
  "description": "MCP server for Epic Startup organization",
  "main": "build/index.cjs",
  "bin": {
    "epic-notes-mcp": "./build/index.cjs"
  },
  "files": [
    "build/index.cjs",
    "README.md"
  ],
  "scripts": {
    "build": "mkdir -p build && esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=build/index.cjs --banner:js='#!/usr/bin/env node'",
    "dev": "mkdir -p build && esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=build/index.cjs --banner:js='#!/usr/bin/env node' --watch",
    "start": "node build/index.cjs",
    "prepublishOnly": "npm run build && chmod +x build/index.cjs"
  },
  "keywords": [
    "mcp",
    "epic-notes",
    "model-context-protocol",
    "notes",
    "organization"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/your-repo.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/your-repo/issues"
  },
  "homepage": "https://github.com/your-username/your-repo#readme",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "esbuild": "^0.25.7",
    "typescript": "^5.9.2",
    "@types/node": "^24.2.1",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
