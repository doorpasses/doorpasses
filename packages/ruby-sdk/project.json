{
  "name": "ruby-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ruby-sdk/lib",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "/opt/homebrew/opt/ruby@3.3/bin/bundle exec rspec",
        "cwd": "packages/ruby-sdk",
        "color": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "/opt/homebrew/opt/ruby@3.3/bin/bundle exec rubocop",
        "cwd": "packages/ruby-sdk",
        "color": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "/opt/homebrew/opt/ruby@3.3/bin/gem build doorpasses.gemspec",
        "cwd": "packages/ruby-sdk",
        "color": true
      },
      "outputs": [
        "{projectRoot}/*.gem"
      ]
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "/opt/homebrew/opt/ruby@3.3/bin/bundle install",
        "cwd": "packages/ruby-sdk",
        "color": true
      }
    }
  },
  "tags": [
    "type:sdk",
    "language:ruby"
  ]
}