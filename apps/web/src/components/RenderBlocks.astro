---
import Content from './blocks/Content.astro'
import MediaBlock from './blocks/MediaBlock.astro'
import CallToAction from './blocks/CallToAction.astro'
import Archive from './blocks/Archive.astro'
import FormBlock from './blocks/FormBlock.astro'
import Featured from './blocks/Featured.astro'
import Logos from './blocks/Logos.astro'
import Pricing from './blocks/Pricing.astro'
import Testimonials from './blocks/Testimonials.astro'
import TestimonialHighlight from './blocks/TestimonialHighlight.astro'
import FeatureList from './blocks/FeatureList.astro'
import BuildFor from './blocks/BuildFor.astro'
import Blog from './blocks/Blog.astro'
import FeatureGrid from './blocks/FeatureGrid.astro'
import StatsGrid from './blocks/StatsGrid.astro'
import Integration from './blocks/Integration.astro'
import FAQ from './blocks/FAQ.astro'
import Tabs from './blocks/Tabs.astro'
import StickyCards from './blocks/StickyCards.astro'
import FounderNote from './blocks/FounderNote.astro'

interface Props {
	blocks?: any[]
}

const { blocks } = Astro.props

if (!blocks || !Array.isArray(blocks)) {
	return null
}
---

<div class="blocks">
	{
		blocks.map((block) => {
			switch (block.blockType) {
				case 'content':
					return <Content {...block} />
				case 'mediaBlock':
					return <MediaBlock {...block} />
				case 'cta':
					return <CallToAction {...block} />
				case 'archive':
					return <Archive {...block} />
				case 'formBlock':
					return <FormBlock {...block} />
				case 'featured':
					return <Featured {...block} />
				case 'logos':
					return <Logos {...block} />
				case 'pricing':
					return <Pricing {...block} />
				case 'testimonials':
					return <Testimonials {...block} />
				case 'testimonialHighlight':
					return <TestimonialHighlight {...block} />
				case 'featureList':
					return <FeatureList {...block} />
				case 'buildFor':
					return <BuildFor {...block} />
				case 'blog':
					return <Blog {...block} />
				case 'featureGrid':
					return <FeatureGrid {...block} />
				case 'statsGrid':
					return <StatsGrid {...block} />
				case 'integration':
					return <Integration {...block} />
				case 'faq':
					return <FAQ {...block} />
				case 'tabs':
					return <Tabs {...block} />
				case 'stickyCards':
					return <StickyCards {...block} />
				case 'founderNote':
					return <FounderNote {...block} />
				default:
					return (
						<div class="unsupported-block">
							Unsupported block type: {block.blockType}
						</div>
					)
			}
		})
	}
</div>
