---

<section class="relative w-full py-16">
	<GridDesign />
	<div class="container relative mx-auto px-4 md:px-6">
		<div class="mx-auto grid grid-cols-12">
			<div class="col-span-1"></div>
			<div class="grid col-span-10 grid-cols-5 grid-rows-6 border border-dashed md:grid-cols-10 md:grid-rows-3">
				<!-- Content Section -->
				<div class="col-span-full row-span-3 space-y-4 p-8 md:col-span-7 bg-background hover:bg-gradient-to-br from-muted/5 to-muted/20 transition-colors">
					<Badge variant="outline" size="sm" class="mb-2">
						{subtitle}
					</Badge>
					<h2 class="text-balance text-3xl font-semibold md:text-4xl font-title">
						{title}
					</h2>
					<p class="text-muted-foreground text-balance md:text-lg max-w-2xl">
						{description}
					</p>
				</div>

				<!-- Integration Icons -->
				{
					integrations.map((integration) => (
						<div 
							class={`${integration.position?.col || 'col-start-1'} ${integration.position?.row || 'row-start-1'} flex items-center justify-center border-b border-l border-t border-dashed bg-background hover:bg-gradient-to-br from-muted/10 to-muted/30 transition-all duration-300 group`}
							aria-label={integration.name}
						>
							<div class="text-muted-foreground group-hover:text-primary transition-colors duration-300 group-hover:scale-110 transform" aria-hidden="true">
								<div set:html={integration.icon} />
							</div>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>