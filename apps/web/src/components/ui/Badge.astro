---
interface Props {
	variant?: 'default' | 'secondary' | 'outline' | 'destructive'
	size?: 'sm' | 'md' | 'lg'
	class?: string
}

const {
	variant = 'default',
	size = 'lg',
	class: className = '',
	...rest
} = Astro.props

const baseClasses =
	'inline-flex items-center font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 font-mono uppercase tracking-wide border-dashed border-[#d1d1d1]'

const variantClasses = {
	default: 'bg-primary text-primary-foreground hover:bg-primary/80',
	secondary: 'bg-secondary text-secondary-foreground hover:bg-secondary/80',
	outline:
		'border border-input bg-background hover:bg-accent hover:text-accent-foreground',
	destructive:
		'bg-destructive text-destructive-foreground hover:bg-destructive/80',
}

const sizeClasses = {
	sm: 'px-2 py-1 text-xs',
	md: 'px-3 py-1.5 text-sm',
	lg: 'px-4 py-2 text-base',
}

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`
---

<div class={classes} {...rest}>
	<slot />
</div>
