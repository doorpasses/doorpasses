---
import MarketingLayout from '../layouts/MarketingLayout.astro'
import { cmsClient } from '../lib/cms'

// Use cmsClient but follow guide patterns for rendering
const posts = await cmsClient.getPosts(1, 12)
---

<MarketingLayout>
  <main class="min-h-screen py-24">
    <div class="container mx-auto px-4 mb-16">
      <div class="prose dark:prose-invert max-w-none">
        <h1 class="text-4xl font-bold text-center mb-8">Blog Posts</h1>
        <p class="text-xl text-center text-gray-600 mb-12">
          Discover the latest insights and updates from our team
        </p>
      </div>
    </div>

    {posts.docs && posts.docs.length > 0 ? (
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.docs.map((post) => (
            <article class="border border-gray-200 rounded-lg overflow-hidden bg-white hover:shadow-lg transition-shadow">
              {post.meta?.image && (
                <img 
                  src={post.meta.image.url} 
                  alt={post.meta.image.alt || post.title} 
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                {post.categories && post.categories.length > 0 && (
                  <div class="mb-4">
                    {post.categories.map((category) => (
                      <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full mr-2">
                        {typeof category === 'object' ? category.title : category}
                      </span>
                    ))}
                  </div>
                )}
                <h2 class="text-xl font-semibold mb-3">
                  <a href={`/posts/${post.slug}`} class="hover:text-blue-600 transition-colors" set:html={post.title} />
                </h2>
                {post.meta?.description && (
                  <p class="text-gray-600 mb-4" set:html={post.meta.description} />
                )}
                <div class="flex justify-between items-center text-sm text-gray-500">
                  {post.publishedAt && (
                    <time datetime={post.publishedAt}>
                      {new Date(post.publishedAt).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  )}
                  <a href={`/posts/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                    Read more â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
        
        {/* Simple pagination - following guide pattern */}
        {posts.totalPages > 1 && (
          <div class="flex justify-center items-center mt-12 space-x-4">
            {posts.page > 1 && (
              <a href={`/posts/page/${posts.page - 1}`} class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                Previous
              </a>
            )}
            <span class="px-4 py-2">
              Page {posts.page} of {posts.totalPages}
            </span>
            {posts.page < posts.totalPages && (
              <a href={`/posts/page/${posts.page + 1}`} class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                Next
              </a>
            )}
          </div>
        )}
      </div>
    ) : (
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-600 text-lg">No posts found.</p>
      </div>
    )}
  </main>
</MarketingLayout>