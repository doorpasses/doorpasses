# Epic Stack - Admin Dashboard
# This env file uses @env-spec - see https://varlock.dev/env-spec for more info
#
# NOTE: This app does NOT use integration OAuth credentials (Jira, Linear, etc.)
# Those were incorrectly included in the previous .env.example but are not
# actually used in the admin app code. Only apps/app uses integrations.
#
# @currentEnv=$NODE_ENV
# @defaultRequired=infer @defaultSensitive=false
# @generateTypes(lang=ts, path=env.d.ts)
# ----------

# @type=enum(production, development, test)
NODE_ENV=development

LITEFS_DIR="/litefs/data"

# @required
DATABASE_PATH="../../packages/database/db/data.db"

# @required @type=url
DATABASE_URL="file:./db/data.db?connection_limit=1"

CACHE_DATABASE_PATH="./../app/other/cache.db"

# @required @sensitive
SESSION_SECRET="super-duper-s3cret"

# @required @sensitive
HONEYPOT_SECRET="super-duper-s3cret"

# @sensitive
RESEND_API_KEY=re_blAh_blaHBlaHblahBLAhBlAh

# @sensitive=false
SENTRY_DSN=your-dsn

# @required @type=url @sensitive=false
BASE_URL=http://localhost:3004

# Root domain for cross-subdomain cookie sharing
# @sensitive=false
ROOT_APP=

# @required @sensitive @type=string(startsWith="sk_")
STRIPE_SECRET_KEY=sk_test_***

# @type=url @sensitive=false
STRIPE_PORTAL_URL=

# @type=number @sensitive=false
TRIAL_DAYS=14

# @type=enum(stripe, manual) @sensitive=false
CREDIT_CARD_REQUIRED_FOR_TRIAL=manual

# @type=enum(CLOSED_BETA, PUBLIC_BETA, LAUNCHED) @sensitive=false
LAUNCH_STATUS=LAUNCHED

# @required @sensitive
INTERNAL_COMMAND_TOKEN=some-made-up-token

# GitHub OAuth (Authentication)
# The mocks rely on these being prefixed with "MOCK_"
# @sensitive=false
GITHUB_CLIENT_ID=MOCK_GITHUB_CLIENT_ID

# @sensitive
GITHUB_CLIENT_SECRET=

# @sensitive
GITHUB_TOKEN=

# @type=url @sensitive=false
GITHUB_REDIRECT_URI=

# @type=boolean @sensitive=false
ALLOW_INDEXING=true

# Tigris Object Storage (S3-compatible) Configuration
# @required @sensitive
AWS_ACCESS_KEY_ID=mock-access-key

# @required @sensitive
AWS_SECRET_ACCESS_KEY=mock-secret-key

# @required @sensitive=false
AWS_REGION=auto

# @required @type=url @sensitive=false
AWS_ENDPOINT_URL_S3=https://fly.storage.tigris.dev

# @required @sensitive=false
BUCKET_NAME=mock-bucket

# BetterStack Uptime Monitoring Configuration
# @sensitive
BETTERSTACK_API_KEY=

# @type=url @sensitive=false
BETTERSTACK_URL=

# Fly.io Runtime (set automatically in production)
# @sensitive=false
FLY_REGION=

# @sensitive=false
FLY_APP_NAME=

# Build-time only (Sentry source map upload)
# @sensitive
SENTRY_AUTH_TOKEN=

# @sensitive=false
SENTRY_ORG=

# @sensitive=false
SENTRY_PROJECT=

# @sensitive=false
COMMIT_SHA=
