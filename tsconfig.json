{
	"include": ["**/*.ts", "**/*.tsx", ".react-router/types/**/*"],
	"extends": ["@epic-web/config/typescript"],
	"compilerOptions": {
		// TODO: Probably should move this into epic-web/config
		"types": ["@react-router/node", "vite/client"],
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"#app/*": ["./apps/app/app/*"],
			"#tests/*": ["./apps/app/tests/*"],
			"@/icon-name": [
				"./apps/app/app/components/ui/icons/types.ts",
				"./apps/app/types/icon-name.d.ts"
			],
			"@repo/ui": ["./packages/ui"],
			"@repo/ui/*": ["./packages/ui/*"],
			"@repo/config": ["./packages/config"],
			"@repo/config/*": ["./packages/config/*"],
			"@repo/ai": ["./packages/ai"],
			"@repo/ai/*": ["./packages/ai/*"],
			"@repo/integrations": ["./packages/integrations/src"],
			"@repo/integrations/*": ["./packages/integrations/src/*"],
			"@repo/notifications": ["./packages/notifications/src"],
			"@repo/notifications/*": ["./packages/notifications/src/*"],
			"@repo/sso": ["./packages/sso"],
			"@repo/sso/*": ["./packages/sso/*"],
			"@repo/validation": ["./packages/validation"],
			"@repo/validation/*": ["./packages/validation/*"]
		}
	}
}
